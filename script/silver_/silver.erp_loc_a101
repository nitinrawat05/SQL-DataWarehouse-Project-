-- ğŸ§¹ Data Cleaning & Standardization: ERP Location Data
-- ğŸ”„ Objective: Clean country codes & customer IDs before loading to silver layer
-- ğŸ“¦ Source: bronze.erp_loc_a101
-- ğŸ§¾ Target: silver.erp_loc_a101
-- =====================================================================

INSERT INTO silver.erp_loc_a101 (cid, cntry)
SELECT 
    -- ğŸ”§ Remove hyphens from customer ID for consistent formatting
    REPLACE(cid, '-', '') AS cid,  
    
    -- ğŸŒ Standardize country codes:
    -- 'DE'      âœ 'Germany'
    -- 'US/USA'  âœ 'United States'
    -- NULL or empty âœ 'n/a'
    -- Anything else is trimmed and used as-is
    CASE 
        WHEN TRIM(cntry) = 'DE' THEN 'Germany'
        WHEN TRIM(cntry) IN ('US', 'USA') THEN 'United States'
        WHEN TRIM(cntry) = '' OR cntry IS NULL THEN 'n/a'
        ELSE TRIM(cntry)
    END AS cntry

FROM bronze.erp_loc_a101;
